@model NackowskisApp.ViewModels.ManageUsersViewModel
@{
    ViewData["Title"] = "ManageUsers";
}

<h2>Manage users</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeUserRole" asp-controller="Admin">
            <h4>Change roles for users.</h4>
            <hr />
            <div class="form-group">

                <select asp-items="Model.Users" name="userId"></select>
                <select asp-items="Model.Roles" name="roleId"></select>
            </div>
                <button type="submit" class="btn btn-default">Change role</button>
                
        </form>
        </div>
</div>